APP_NAME="Disaster Preparedness Training"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://disaster-preparedness.alertaraqc.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Configuration
# Default is SQLite, but you can switch to MySQL by changing DB_CONNECTION
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL Configuration (uncomment if using MySQL)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=disaster_training
# DB_USERNAME=root
# DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=database

# Broadcasting Configuration
BROADCAST_CONNECTION=log

# Mail Configuration
# For development, emails are logged. For production, configure SMTP below.
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@alertaraqc.com"
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Configuration (uncomment and configure for production)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_username
# MAIL_PASSWORD=your_password
# MAIL_ENCRYPTION=tls

# SMS Configuration
# Options: 'log', 'twilio', 'vonage'
SMS_PROVIDER=log

# Twilio Configuration (uncomment if using Twilio)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890

# Vonage Configuration (uncomment if using Vonage)
# VONAGE_API_KEY=your_api_key
# VONAGE_API_SECRET=your_api_secret
# VONAGE_FROM_NUMBER=YourBrandName

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# AWS Configuration (if using S3 or SES)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Redis Configuration (if using Redis)
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# ============================================
# CENTRALIZED LOGIN API (AlerTara)
# ============================================
# Note: NO JWT_SECRET or AUTH_API_TOKEN needed here!
# Those are only for the centralized login server (login.alertaraqc.com)
# Your dashboard calls the API with the user's token from the URL
CENTRALIZED_LOGIN_URL=https://login.alertaraqc.com
AUTH_API_ENDPOINT=https://login.alertaraqc.com/api/auth/validate
MAIN_DOMAIN=https://alertaraqc.com
# ⚠️ LOCAL: http://localhost:8000 | PRODUCTION: https://alertaraqc.com
